@using Models
@model List<Product>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                @* Depending on your logic, you can conditionally render this link *@
                @* @if (ViewBag.Role == "Admin")
                { *@
                @*<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Employee
                </a> *@
                @* } *@
            </div>
        </div>

        <table id="productTable" class="table table-bordered table-striped" style="width:100%">
